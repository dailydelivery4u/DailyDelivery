<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletFragment">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/balanceDisplayTV"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="DD Balance"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/balanceDisplayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Rs. - - "
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add Balance:"
        android:textColor="@color/colorBlack" />

    <EditText
        android:id="@+id/amountET"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:inputType="number"
        android:text="" />

    <TextView
        android:id="@+id/monthlyCostTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountET"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Monthly Order Value: Rs. 500"
        android:textColor="#732525" />

    <Button
        android:id="@+id/payOnlineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthlyCostTV"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_background_color_primary"
        android:minHeight="43dp"
        android:text="Recharge Online"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/promoCodeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payOnlineBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Have a Promo Code?"
        android:textColor="@color/tv_hyperlink"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/promoCodeResultRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payOnlineBtn"
        android:layout_marginTop="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/promoCodeResultHeaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/removePromoBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/promoCodeResultHeaderTV"
            android:layout_toRightOf="@+id/promoCodeResultHeaderTV"
            android:background="@drawable/circle_cancel_btn_bg"
            android:text="X" />

        <TextView
            android:id="@+id/promoCodeResultMessageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promoCodeResultHeaderTV"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/cashColTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Request Cash Recharge"
        android:textColor="@color/tv_hyperlink"
        android:textSize="17sp" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/myTransactionsTV"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/myTransactionsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="end"
        android:padding="10dp"
        android:text="View My Transactions"
        android:textAlignment="textEnd"
        android:textColor="@color/colorCheckoutBg"
        android:textSize="16sp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary" />
</RelativeLayout>