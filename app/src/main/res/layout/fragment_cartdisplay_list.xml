<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="in.dailydelivery.dailydelivery.Fragments.cartDisplayFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.CartDisplayFragment">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomLL"
        android:layout_alignParentTop="true"
        tools:listitem="@layout/fragment_cartdisplay" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/orderDateRL"
        android:background="#FF5722" />

    <RelativeLayout
        android:id="@+id/orderDateRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bottomLL"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/deliveryDateHeaderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Delivery Date"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/deliveryDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliveryDateHeaderTV"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="WED, MAR 27, 2019"
            android:textColor="@color/colorBrown"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_calender"
            android:tint="@color/colorDarkPink" />

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/bottomLL"
        android:background="#FF5722" />

    <RelativeLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <!--android:background="#faf2f2" -->


        <TextView
            android:id="@+id/totalPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Total : Rs. 500"
            android:textColor="#732525"
            android:textSize="16sp" />

        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background_green"
            android:gravity="center"
            android:minHeight="35dp"
            android:text="Place Order"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</RelativeLayout>